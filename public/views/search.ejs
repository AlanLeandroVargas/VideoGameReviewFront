<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="../css/search.css">
</head>

<body>
    <%- include('partials/header') %>
</body>
<div class="container">
    <h1 class="mt-3 border-bottom">Resultados:</h1>
    <div class="card-grid-container">
        <% searchedGames.forEach(function(game) { %>
            <div class="card d-flex m-2">
                <a href="/game/<%= game.name %>">
                    <img src="<%= game.imageUrl %>" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">
                            <%= game.name %>
                        </h3>
                        <div class="container p-0 mt-3 d-flex flex-wrap">
                            <% game.genre.forEach(function(genre) { %>
                                <p class="border p-1 mx-1 text-center rounded">
                                    <%= genre %>
                                </p>
                                <% }); %>
                        </div>
                        <div class="container border-top card-bottom px-0 d-flex">
                            <div class="container p-0 mt-3">
                                <h6>Generalmente favorable</h6>
                                <p class="card-text">Basado en <%= game.amountOfReviews %> criticas
                                </p>
                            </div>
                            <div class="container w-50 d-flex my-3">
                                <% if (game.averagePuntuation < 4) {%>
                                    <div class="align-content-center text-center w-100 rounded bad-rating">
                                        <h2 class="p-2">
                                            <%= game.averagePuntuation %>
                                        </h2>
                                    </div>
                                    <% } else if (game.averagePuntuation>= 4 &&
                                        game.averagePuntuation < 8) { %>
                                            <div class="align-content-center text-center w-100 rounded decent-rating">
                                                <h2 class="p-2">
                                                    <%= game.averagePuntuation %>
                                                </h2>
                                            </div>
                                            <% } else { %>
                                                <div class="align-content-center text-center w-100 rounded good-rating">
                                                    <h2 class="p-2">
                                                        <%= game.averagePuntuation %>
                                                    </h2>
                                                </div>
                                                <% } %>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <% }); %>
    </div>
</div>

</html>